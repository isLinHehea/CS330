<view class="container">
<view class="img_wrap">
    <image class="img" src="{{img}}" mode='aspectFit'/>
</view>
<button class="select" bindtap="upload" >拍摄 / 选取图片识别</button>
<form class = "info_form">
  <view class = "head">
    <text>个人信息</text>
  </view>
  <view>
    <text class = "text">姓名：</text>
    <input class="ipt" name="name" type="text" bindinput='getName'  placeholder="请输入您的姓名" />
  </view>
  <view>
    <text class = "text">性别：</text>
    <input class="ipt" name="gender" type="text" bindinput='getGender'  placeholder="请输入您的性别" />
  </view>
</form>
<button class="submit" bindtap="submit">提交</button>
 </view>
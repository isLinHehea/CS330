.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.parent_view{
  position: relative;
  z-index: 1;
}

.title{
  font-size: 37px;
  font-weight: 700;
  /* font-family: 'Courier New', Courier, monospace; */
  font-family: 'Times New Roman', Times, serif;
  background: -webkit-linear-gradient(left, #ffccd5,#ff99aa);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 22px 0;
}

.title2{
  width: 70%;
  font-size: 27px;
  font-weight: 700;
  /* font-family: 'Courier New', Courier, monospace; */
  font-family: 'Times New Roman', Times, serif;
  background: -webkit-linear-gradient(left, #ffccd5,#ff99aa);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  margin: 22px 0;
  text-align: center;
  border:2px  rgb(192, 192, 192) solid;
  background-color: rgb(255, 255, 255);
  border-radius: 50rpx;
  box-shadow: -7rpx -7rpx 7rpx 7rpx #ff99aa;
  padding: 20px;
}

.img_wrap1{
  width: 300px;
  height: 300px;
  margin-top: -40px;
}

.img1{
  width: 300px;
  height: 300px;
}

.img_wrap2{
  width: 70%;
  margin-bottom: -10px;
}

.img2{
  width: 100%;
}

.info_form{
  width: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10% 0;
  border:2px  rgb(192, 192, 192) solid;
  background-color: rgb(255, 255, 255);
  border-radius: 50rpx;
  box-shadow: 7rpx 7rpx 7rpx 7rpx #ff99aa;
}

.head{
  font-size: 27px;
  font-weight: 700;
  text-align: center;
  font-weight: bolder;
  letter-spacing: 7px;
  margin: 20px 0;
  /* font-family: 'Courier New', Courier, monospace; */
  font-family: 'Times New Roman', Times, serif;
  background: -webkit-linear-gradient(left, #ffccd5,#ff99aa);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.text{
  color: #646566;
  font-size: 19px;
  margin: 20px 0;
}

.return {
  font-size: 17px;
  font-family: 微软雅黑;
  width: 300px;
  height: 50px;
  line-height: 35px;
  border-radius: 25px;
  color: rgb(255, 255, 255);
  background-color: #ff99aa;
}